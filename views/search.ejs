<%- include('partials/header') -%>

<div class="container mt-5 w-50">

    <h2 class="mb-4">Search Book</h2>

    <form action="/book" method="GET">
        <input type="text" name="title" class="form-control" placeholder="Book Title">

        <button type="submit" class="btn btn-danger btn-block mt-3">Search in Database</button>

    </form>

    <% if(book) { %>
    <h4 class="text-danger my-4">Search Results: </h4>
    <table class="table table-bordered" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
            </tr>
        </thead>

        <tbody>
            <tr>
                <td><%= book.title %></td>
                <td><%= book.author %></td>
                <td>$<%= book.isbn %></td>
            </tr>

        </tbody>
    </table>
 <% } else if(book != ''){ %>

    <div class="alert alert-danger mt-4">Book does not exist with this name.</div>

    <% } %>

</div>

<%- include('partials/footer') -%>